#!/bin/bash
export HOME=/root
export USER=root
rcfile=/cvmfs/lhcb.cern.ch/lib/LbLogin.sh
[ -e \$rcfile ] && . \$rcfile && . SetupProject.sh LHCbDirac
# We force DIRAC to pick our custom dirac.cfg
export DIRACSYSCONFIG=/opt/dirac/etc/dirac.cfg
#
exec 2>&1
#
[ "agent" = "agent" ] && renice 20 -p \$\$
#
DIRACAGENT=\`which dirac-agent\`
exec python \$DIRACAGENT ##_system_##/##_agent_## -o LogLevel=INFO < /dev/null